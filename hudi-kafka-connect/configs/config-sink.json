{
    "name": "hudi-sink",
    "config": {
        "connector.class": "org.apache.hudi.connect.HudiSinkConnector",
        "tasks.max": "4",
        "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    	"value.converter": "org.apache.kafka.connect.json.JsonConverter",
    	"value.converter.schemas.enable": "false",
        "topics": "hudi-test-topic",
	"hoodie.table.name": "hudi-test-topic",
	"hoodie.base.path": "file:///tmp/hoodie/sample-table",
	"hoodie.schemaprovider.class": "org.apache.hudi.utilities.schema.FilebasedSchemaProvider",
	"hoodie.deltastreamer.schemaprovider.source.schema.file": "file:///tmp/schema.asvc",
	"hoodie.deltastreamer.schemaprovider.target.schema.file": "file:///tmp/schema.asvc"
    }
}
